        <Image x:Name="CharacterSelect3" Tag="" Source="Others/invalid_default.png" HorizontalAlignment="Left" Height="87" Margin="756,295,0,0" VerticalAlignment="Top" Width="87"/>

        <Grid x:Name="GridLogin" Margin="561,32,0,0" Visibility="Visible" HorizontalAlignment="Left" Width="292" Height="245" VerticalAlignment="Top">
            <Rectangle x:Name="LoginBox"  Fill="Gray" HorizontalAlignment="Left" Height="245" Margin="1,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="291"/>
            <TextBox x:Name="LoginText" HorizontalAlignment="Left" Height="23" Margin="127,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
            <PasswordBox x:Name="PassText" HorizontalAlignment="Left" Margin="127,190,0,0" VerticalAlignment="Top" Width="155" Height="23"/>
