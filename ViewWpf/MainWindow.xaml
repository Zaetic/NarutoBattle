        <Image x:Name="Character8" Tag="" Source="Others/invalid_default.png" HorizontalAlignment="Left" Height="87" Margin="102,335,0,0" VerticalAlignment="Top" Width="87" MouseLeftButtonDown="Character_Select"/>
        <Image x:Name="Character9" Tag="" Source="Others/invalid_default.png" HorizontalAlignment="Left" Height="87" Margin="194,335,0,0" VerticalAlignment="Top" Width="87" MouseLeftButtonDown="Character_Select"/>
