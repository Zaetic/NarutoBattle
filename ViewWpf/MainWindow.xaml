        <Image x:Name="Character5" Tag="" Source="Others/invalid_default.png" HorizontalAlignment="Left" Height="87" Margin="378,243,0,0" VerticalAlignment="Top" Width="87" MouseLeftButtonDown="Character_Select"/>
        <Image x:Name="Character6" Tag="" Source="Others/invalid_default.png" HorizontalAlignment="Left" Height="87" Margin="470,243,0,0" VerticalAlignment="Top" Width="87" MouseLeftButtonDown="Character_Select"/>

